android_app {
    // the build system in pi-dev can't quite handle R.java in kt
    // so we will have a mix of java and kotlin files
    srcs: ["src/**/*.java", "src/**/*.kt"],
    resource_dirs: ["res"],
    name: "DT2W-Service-Begonia",
    certificate: "platform",
    platform_apis: true,
    optimize: {
        enabled: false,
    },
    privileged: true

    required: [
        "privapp-permissions_org.pe.dt2w.begonia"
    ],
}

prebuilt_etc {
    name: "privapp-permissions_org.pe.dt2w.begonia",
    sub_dir: "permissions",
    src: "privapp-permissions_org.pe.dt2w.begonia.xml",
    filename_from_src: true,
}
